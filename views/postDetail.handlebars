<div class="container-fluid d-flex flex-column">
     <div class="post-div d-flex flex-column" data-postId={{post.id}}>
          <div  class="d-flex justify-content-between align-items-center post-header py-2">
          <h6>{{post.title}}</h6>
          <small class="align-self-end">Posted by {{post.postedBy}} on {{post.postedOn}}</small>
          </div>
          <p class="py-2">{{post.content}}</p>
      </div>  
      <div class="comment-div  d-flex flex-column"  data-post={{post.id}}>
        <div class="post-header"></div>  
          <label for="comment" class="mt-3">Comment</label>
          <textarea id="comment" rows="4" cols="10"></textarea>
          <button class="btn my-2">Submit</button>
        </div>
       </div> 
        {{#each comments as |commentData|}}
        <div  class="comment-details-div  d-flex flex-column justify-content-center">
        <div class="post-header"></div>  
          <p class="p-2 px-3">{{commentData.comment}}</p>
          <p class="p-2 px-3">-{{commentData.user.username}},<span class="px-2">{{commentData.commentedOn}}</span></p>
        </div>
        {{/each}}
</div>
{{#if logged_in}}
<script src="/js/createComment.js"></script>
{{/if}}