
<div class="container" id="new-post-form">
     <h4 class="m-0 mb-3">My Dashboard</h4>
    <form action="" id="new-post-form" class="px-2 py-2 d-flex flex-column">
        <h6 class="p-2 bg-dark text-light">Create New Post</h6>
        <div class="form-group my-3 ">
              <label for="title" class="my-2">Title</label>
              <input type="text" class="form-control px-5" id="title">
        </div>
        <div class="form-group my-4">
              <label for="content" class="my-2">Content</label>
              <input type="text" class="form-control px-5" id="content">
        </div>
        <div class="form-group my-3">
            <button class="btn px-4" id="create-btn">Create</button>
        </div>
    </form>
</div>
{{#if logged_in}}
<button id="create-post-btn" class="btn">Create New Post</button>
<script src="/js/newpost.js"></script>
<script src="/js/script.js"></script>
{{/if}}